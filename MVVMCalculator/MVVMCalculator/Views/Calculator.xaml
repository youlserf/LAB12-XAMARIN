<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MVVMCalculator.Views"
             x:Class="MVVMCalculator.Views.Calculator">
    <ContentPage.Content>
        <Grid Padding="5,0" RowSpacing="1" ColumnSpacing="1" BackgroundColor="Black">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label x:Name="resultText1" FontSize="48" FontAttributes="Bold" BackgroundColor="Black" 
                   Text="{Binding ResultOperacion}"
              TextColor="White" HorizontalTextAlignment="End" VerticalTextAlignment="Center"
              LineBreakMode="NoWrap" Grid.ColumnSpan="4"/>

            <Label x:Name="resultText" FontSize="48" FontAttributes="Bold" BackgroundColor="Black" 
                   Text="{Binding Result}"
              TextColor="White" HorizontalTextAlignment="End" VerticalTextAlignment="Center"
              LineBreakMode="NoWrap" Grid.ColumnSpan="4" Grid.Row="1"/>

            <Button Text="7" Grid.Row="2" Grid.Column="0" Command="{Binding OnSelectNumber}" CommandParameter="7"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0"  />
            <Button Text="8" Grid.Row="2" Grid.Column="1" Command="{Binding OnSelectNumber}" CommandParameter="8"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0"  />
            <Button Text="9" Grid.Row="2" Grid.Column="2" Command="{Binding OnSelectNumber}" CommandParameter="9"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0"  />

            <Button Text="4" Grid.Row="3" Grid.Column="0" Command="{Binding OnSelectNumber}" CommandParameter="4"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0"  />
            <Button Text="5" Grid.Row="3" Grid.Column="1" Command="{Binding OnSelectNumber}" CommandParameter="5"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0"  />
            <Button Text="6" Grid.Row="3" Grid.Column="2" Command="{Binding OnSelectNumber}" CommandParameter="6"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0"  />

            <Button Text="1" Grid.Row="4" Grid.Column="0" Command="{Binding OnSelectNumber}" CommandParameter="1"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0"  />
            <Button Text="2" Grid.Row="4" Grid.Column="1" Command="{Binding OnSelectNumber}" CommandParameter="2"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0" />
            <Button Text="3" Grid.Row="4" Grid.Column="2" Command="{Binding OnSelectNumber}" CommandParameter="3"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0"  />
            <Button Text="0" Grid.Row="5" Grid.Column="0" Command="{Binding OnSelectNumber}" CommandParameter="0"
                    Grid.ColumnSpan="3"
               BackgroundColor="White" TextColor="Black"
               FontSize="36" BorderRadius="0"  />

            <Button Text="÷" Grid.Row="2" Grid.Column="3"
                BackgroundColor="{x:Static local:SharedResources.OpButtonBkColor}" TextColor="White"
                FontSize="36" BorderRadius="0"  Command="{Binding Dividir}"/>
            <Button Text="×" Grid.Row="3" Grid.Column="3"
                BackgroundColor="{x:Static local:SharedResources.OpButtonBkColor}" TextColor="White"
                FontSize="36" BorderRadius="0" Command="{Binding Multiplicar}"/>
            <Button Text="-" Grid.Row="4" Grid.Column="3"
                BackgroundColor="{x:Static local:SharedResources.OpButtonBkColor}" TextColor="White"
                FontSize="36" BorderRadius="0"  Command="{Binding Restar}"/>
            <Button Text="+" Grid.Row="5" Grid.Column="3"
                BackgroundColor="{x:Static local:SharedResources.OpButtonBkColor}" TextColor="White"
                FontSize="36" BorderRadius="0"  Command="{Binding Sumar}"/>

            <Button Text="C" Grid.Row="6" Grid.Column="0" Command="{Binding OnClear}"
                BackgroundColor="#808080" TextColor="White"
                FontSize="36" BorderRadius="0"/>

            <Button Text="=" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3"
                BackgroundColor="{x:Static local:SharedResources.OpButtonBkColor}" TextColor="White"
                FontSize="36" BorderRadius="0"  Command="{Binding IgualTotal }"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>